{
  "manifest_version": 3,
  "name": "TS Open Chrome Tools",
  "version": "1.0.4",
  "description": "Rename tabs and set tab group name/color with local rules and no third-party code.",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "tabGroups",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Rename current tab",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "minimum_chrome_version": "114"
}
